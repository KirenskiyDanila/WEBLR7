{% extends 'base.html.twig' %}

{% block title %}Новостной сайт Киренского.{% endblock %}

{% block body %}



<div class="container">
    <div class="row">
      {% for news in data %}
          <div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
              <div class="bg-gradient bg-{{random(['body', 'info', 'light', 'success', 'secondary', 'primary'])|raw}}">
                  <div class="col-md-5 p-lg-5 mx-auto my-5">
                     <h1 class="display-4 fw-normal">{{ news.name|e }}</h1>
                     <p class="lead fw-normal">{{ news.annotation|e }}</p>
                     <a class="btn btn-outline-danger" href="news/{{ news.id|e}}">Открыть новость</a>
                  </div>
                  <div class="row">
                      <div class="col-sm-6 font-monospace">{{ news.commentCount|e }} comments</div>
                      <div class="col-sm-6 font-monospace">{{ news.date|date }}</div>
                  </div>
              </div>
          </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
